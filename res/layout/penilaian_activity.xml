<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.antariksaassistant.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewMateri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Materi : Pelajaran Ghunah" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.57"
            android:gravity="center"
            android:text="Kehadiran" />

        <RadioGroup
            android:id="@+id/radioGroupKehadiran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.91"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioHadir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Hadir" />

            <RadioButton
                android:id="@+id/radioIzin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Izin" />

            <RadioButton
                android:id="@+id/radioSakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit" 
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/radioTanpaKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa Keterangan" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewKeteranganTidakHadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.57"
            android:gravity="center"
            android:text="Keterangan Tidak Hadir" />

        <EditText
            android:id="@+id/editTextKeteranganTidakHadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textViewGiliranKoreksiBacaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.57"
            android:gravity="center"
            android:text="Giliran Koreksi Bacaan (GKB)" />

        <CheckBox
            android:id="@+id/checkBoxmenyetorkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menyetorkan" />

        <TextView
            android:id="@+id/textViewKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penilaian GKB" />

        <Spinner
            android:id="@+id/spinnerKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/keterangan_gkb"
            android:spinnerMode="dialog" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewKeteranganGKB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan GKB" 
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextKeteranganGKB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewPreodicTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.57"
            android:gravity="center"
            android:text="Periodik testt (PoT)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewIsian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isian                   :" />

            <EditText
                android:id="@+id/editTextIsian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan" />

        <EditText
            android:id="@+id/editTextKeteranganIsian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewPilihanGanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Ganda : " />

            <EditText
                android:id="@+id/editTextPilihanGanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan" />

        <EditText
            android:id="@+id/editTextKeteranganPilihanGanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewBenarSalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benar / Salah  :" />

            <EditText
                android:id="@+id/editTextBenarSalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan" />

        <EditText
            android:id="@+id/editTextKeteranganBenarSalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/buttonLihatNilaiTotal"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button_red"
            android:gravity="center"
            android:text="Lihat Nilai Total"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewNilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nilai\n -" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Simpan"
             />

        <Button
            android:id="@+id/buttonReport"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Kirim laporan" 
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button_red"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>